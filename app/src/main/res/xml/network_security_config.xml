<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
        Release 配置: 仅信任系统证书，提高安全性
        Cleartext traffic is permitted for compatibility with some HTTP resources.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- 
        Debug 配置: 允许用户证书 (用于 Charles/Fiddler 抓包)
        此配置仅在 debuggable="true" (Debug Build) 时生效
    -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>